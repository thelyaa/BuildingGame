<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/css/font-awesome-4.7.0/css/font-awesome.min.css">
</head>
<div class="air fit-content">
    <div class="form-inner">
        <div class="stripes-block"></div>
        <div id="main"></div>
        <div class="form-row"></div>
        <div id="firmMaterials" class="directorScreen_materialsTable">
            <table>
                <th>Материал</th>
                <th>Количество</th>
                <tr>
                    <td>Фундамент</td>
                    <td>
                        <div id="count1"></div>
                    </td>
                </tr>
                <tr>
                    <td>Стены</td>
                    <td>
                        <div id="count2"></div>
                    </td>
                </tr>
                <tr>
                    <td>Крыша</td>
                    <td>
                        <div id="count3"></div>
                    </td>
                </tr>
            </table>
            <table>
                <th>Инструмент</th>
                <th>Количество</th>
                <tr>
                    <td>Степлер</td>
                    <td>
                        <div id="count4"></div>
                    </td>
                </tr>
                <tr>
                    <td>Скотч</td>
                    <td>
                        <div id="count5"></div>
                    </td>
                </tr>
                <tr>
                    <td>Скрепки</td>
                    <td>
                        <div id="count6"></div>
                    </td>
                </tr>
                <tr>
                    <td>Скобы для степлера</td>
                    <td>
                        <div id="count7"></div>
                    </td>
                </tr>
            </table>
        </div>
        <div class="form-row"></div>
        <h2 class="directorScreen_requestHeader">Заявка</h2>
        <div id="materials" class="directorScreen_materialsTable">
            <table>
                <th></th>
                <th>Материал</th>
                <th>Кол-во</th>
                <tr>
                    <td><input type="checkbox" class="field" id="material1"></td>
                    <td><label>Фундамент</label></td>
                    <td class='td-count'><input id="material1Inp" type="number"></td>

                </tr>
                <tr>
                    <td><input type="checkbox" class="field" id="material2"></td>
                    <td><label>Стены</label></td>
                    <td class='td-count'><input id="material2Inp" type="number"></td>

                </tr>
                <tr>
                    <td><input type="checkbox" class="field" id="material3"></td>
                    <td><label>Крыша</label></td>
                    <td class='td-count'><input id="material3Inp" type="number"></td>

                </tr>
                <tr>
                    <td><input type="checkbox" class="field" id="material4"></td>
                    <td><label>Степлер</label></td>
                    <td class='td-count'><input id="material4Inp" type="number"></td>

                </tr>
                <tr>
                    <td><input type="checkbox" class="field" id="material5"></td>
                    <td><label>Скотч</label></td>
                    <td class='td-count'><input id="material5Inp" type="number"></td>

                </tr>
                <tr>
                    <td><input type="checkbox" class="field" id="material6"></td>
                    <td><label>Скрепки</label></td>
                    <td class='td-count'><input id="material6Inp" type="number"></td>

                </tr>
                <tr>
                    <td><input type="checkbox" class="field" id="material7"></td>
                    <td><label>Скобы для степлера</label></td>
                    <td class='td-count'><input id="material7Inp" type="number"></td>

                </tr>
            </table>
            <!--    <label>Выделенная сумма на покупку</label><input type="number" id="requestPrice">-->
        </div>
        <div class="form-row">
        </div>
        <div class="buttonMenuBlock">
            <div class="button-menu" onclick="SendRequest()">
                <div class="icon">
                    <i class="fa fa-paper-plane"></i>
                </div>
                <div class="icon-text">
                    <span>Отправить заявку</span>
                </div>
            </div>
        </div>
        <div class="form-row">
        </div>
        <div id="newObject" class="directorScreen_newObject">
            <div><span>Название объекта</span><input type="text" id="nameObject"></div>
            <div><span>Площадь объекта</span><input type="number" id="squareObject"></div>
            <div><span>Себестоимость объекта</span><input type="number" id="pricePerMetre"></div>
        </div>
        <div class="form-row">
        </div>
        <div class="buttonMenuBlock">
            <div class="button-menu" onclick="startProject()">
                <div class="icon">
                    <i class="fa fa-suitcase"></i>
                </div>
                <div class="icon-text">
                    <span>Отправить прорабу</span>
                </div>
            </div>
        </div>
        <div class="form-row">
        </div>
    </div>
</div>
<script src="../js/directorScript.js"></script>
